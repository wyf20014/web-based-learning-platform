{{> admin_nav}}
<div class="col-sm-9">
    <h3>&nbsp;&nbsp;修改学生信息</h3><br>
    <div class="formContainer">
        <form class="form-horizontal newsletterForm" role="form" action="/admin/{{account.id}}/student_update/{{user_account}}" method="POST">
            <div class="form-group">
                <label for="fieldAccount" class="col-sm-2 control-label">学生用户名</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" disabled  value='{{user_account}}'>
                    <input type="hidden" class="form-control" name="account" value='{{user_account}}'>
                </div>
            </div>
            <div class="form-group">
                <label for="fieldName" class="col-sm-2 control-label">学生姓名</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" required name="name" value='{{name}}'>
                </div>
            </div>
            <div class="form-group">
                <label for="fieldExp" class="col-sm-2 control-label">学生经验值</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" required name="exp" value='{{exp}}'>
                </div>
            </div>
            <div class="form-group">
                <label for="fieldPassword" class="col-sm-2 control-label">学生密码</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" disabled value='{{password}}'>
                    <input type="hidden" class="form-control" name="password" value='{{password}}'>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-4">
                    <button type="submit"  class="btn btn-default" >提交</button>
                </div>
            </div>
        </form>
    </div>
</div>

{{#section 'jquery'}}
    <script>
        $('document').ready(function(){
            $('#header_nav li').eq(4).addClass('active');
            $('#admin_nav li').eq(1).addClass('active');
        });
    </script>
{{/section}}