{{>admin_nav}}
<div class="col-sm-9">
	<h3>&nbsp;&nbsp;上传课程</h3><br>
	<form class="form-horizontal" role="form" 
		enctype="multipart/form-data" method="POST"
		action="/admin{{account.id}}/course_upload">
	<div class="form-group">
		<label for="fieldName" class="col-sm-2 control-label">课程名称</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" 
			id="fieldName" name="name">
		</div>
	</div>
	<div class="form-group">
		<label for="fieldTag" class="col-sm-2 control-label">课程标签</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" required 
				id="fieldName" name="tag">
		</div>
	</div>
	<div class="form-group">
		<label for="fieldPhoto" class="col-sm-2 control-label">课程图片</label>
		<div class="col-sm-6">
			<span class="btn btn-default btn-file">
				上传图片
				<input type="file" class="form-control" required accept="image/*"
					id="fieldPhoto" data-url="/upload"  name="photo">
			</span>
			<div id="fileUploads"></div>
		</div>
	</div>
	<div class="form-group">
		<label for="fieldInfo" class="col-sm-2 control-label">课程简介</label>
		<div class="col-sm-8">
			<textarea name="info" rows='10' class="form-control" required></textarea>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-4">
			<button type="submit" class="btn btn-primary">提交</button>
		</div>
	</div>
</form>
</div>
{{#section 'jquery'}}
	<script src="/vendor/jquery-file-upload/js/vendor/jquery.ui.widget.js"></script>
	<script src="/vendor/jquery-file-upload/js/jquery.iframe-transport.js"></script>
	<script src="/vendor/jquery-file-upload/js/jquery.fileupload.js"></script>
	<script>
		$(document).ready(function(){
			$('#header_nav li').eq(4).addClass('active');
			$('#admin_nav li').eq(2).addClass('active');
			$('#fieldPhoto').fileupload({
				dataType: 'json',
				done: function(e, data){
					$.each(data.result.files, function(index, file){
						console.log(file);
						$('#fileUploads').append($('<div class="upload">' +
							'<span class="glyphicon glyphicon-ok"></span>&nbsp;' +
							file.originalName + '</div>'));
					});
				}
			});

		});
	</script>
{{/section}}