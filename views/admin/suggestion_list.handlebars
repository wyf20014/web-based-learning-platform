	<script>
		$('document').ready(function(){
			$('#header_nav li').eq(4).addClass('active');
			$('#admin_nav li').eq(5).addClass('active');
			var table = $("#example").DataTable( {
					"bDestroy":true,
					"pagingType": "full_numbers",
	      			  	"stateSave": true,
					"oLanguage":{
						      "sProcessing":    "<img src='./loading.gif' />",
