{{>admin_nav}}
<div class="col-sm-9">
	<div class="row">
		<div class="col-sm-10 text-center">
	                <h3 style='color:blue'>建议采纳</h3>
	            </div>
	</div>
	<div class="row">
		<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
		        <thead>
		            <tr>
		                <th>建议标题</th>
		                <th>建议内容</th>
		                <th>提议人</th>
		                <th>答复内容</th>
		                <th>操作</th>
		            </tr>
		        </thead>
		 
		        <tbody>
		        {{#each suggestions}}
		             <tr>
		                <td style='font-size:14px;color:blue'>{{title}}</td>
		                <td >{{content}}</td>
		                <td>{{stu_account}}</td>
		                <td>{{reply}}</td>
		                <td>{{#if replyed}} <a  href='/admin/{{../../account.id}}/suggestion_update/{{stu_account}}/{{title}}' class="btn btn-primary" role="button" >答复</a>{{/if}}</td>
		        {{/each}}
		           
		        </tbody>
		    </table>
	</div>
	<input type="hidden" id="sessionid" value="{{account.id}}">
</div>
