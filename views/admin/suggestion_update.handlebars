{{> admin_nav}}
<div class="col-sm-9">
    <h3>&nbsp;&nbsp;修改学生信息</h3><br>
    <div class="formContainer">
        <form class="form-horizontal newsletterForm" role="form" action="/admin/{{account.id}}/suggestion_update/{{stu_account}}/{{title}}" method="POST">
            <div class='row'>
                <div class="col-sm-offset-1 col-sm-10">
                    <h4 style='color:blue'>建议标题:&nbsp;&nbsp;<span style='color:black'>{{title}}</span></h4>
                </div>
            </div>
            <div class='row'>
                <div class="col-sm-offset-1 col-sm-10">
                    <h4 style='color:blue'>建议内容:&nbsp;&nbsp;<span style='color:black'>{{content}}</span></h4>
                </div>
            </div>
            <div class='row'>
                <div class="col-sm-offset-1 col-sm-10">
                    <h4 style='color:blue'>建议人:&nbsp;&nbsp;<span style='color:black'>{{stu_account}}</span></h4>
                    <br/>
                </div>
            </div>
               <div class="form-group">
                <label for="fieldReply" class="col-sm-2 control-label">回复内容</label>
                <div class="col-sm-9">
                    <textarea name="reply" class='form-control' rows="15"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="fieldExp" class="col-sm-2 control-label">奖励经验值</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" required name="exp">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-4">
                    <button type="submit"  class="btn btn-default" >提交</button>
                </div>
            </div>
        </form>
    </div>
</div>

{{#section 'jquery'}}
    <script>
        $('document').ready(function(){
            $('#header_nav li').eq(4).addClass('active');
            $('#admin_nav li').eq(5).addClass('active');
        });
    </script>
{{/section}}