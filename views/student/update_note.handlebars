{{>student_nav}}
<div class="col-sm-9">
	<h3>&nbsp;&nbsp;修改日记</h3><br>
	<div class="formContainer">
	    <form class="form-horizontal newsletterForm" role="form" action="/student/{{account.id}}/update_note/{{title}}" method="POST">
	        <div class="form-group">
	            <label for="fieldName" class="col-sm-2 control-label">日记标题</label>
	            <div class="col-sm-6">
	                <input type="text" class="form-control" disabled  name="title" autofocus="autofocus" value='{{title}}'>
	            </div>
	        </div>
	        <div class="form-group">
	            <label for="fieldTag" class="col-sm-2 control-label">日记标签</label>
	            <div class="col-sm-6">
	                <input type="text" class="form-control" required  name="tag" value='{{tag}}'>
	            </div>
	        </div>
	        <div class="form-group">
	            <label for="fieldContent" class="col-sm-2 control-label">日记内容</label>
	            <div class="col-sm-9">
	                <textarea  class='form-control' rows="15" name="content">{{content}}</textarea>
	            </div>
	        </div>
	        <div class="form-group">
	            <div class="col-sm-offset-2 col-sm-4">
	                <button type="submit"  class="btn btn-default" >提交</button>
	            </div>
	        </div>
	    </form>
	</div>
</div>
{{#section 'jquery'}}
	<script>
		$('document').ready(function(){
			$('#header_nav li').eq(4).addClass('active');
			$('#student_nav li').eq(2).addClass('active');
		});
	</script>
{{/section}}