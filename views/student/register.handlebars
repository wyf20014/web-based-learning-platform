<div class="col-sm-offset-1"><h3>新用户注册</h3>
<br> </div>

<div class="formContainer">
    <form class="form-horizontal newsletterForm" role="form" action="/student/register" method="POST">
        <div class="form-group">
            <label for="fieldAccount" class="col-sm-2 control-label">用户名</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="fieldAccount" name="account" autofocus="autofocus">
            </div>
        </div>
         <div class="form-group">
            <label for="fieldName" class="col-sm-2 control-label">姓名</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="fieldName" name="name">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldPassword1" class="col-sm-2 control-label">密码</label>
            <div class="col-sm-4">
                <input type="password" class="form-control" id="fieldPassword1" name="password1" required>
            </div>
			<br>
        </div>
         <div class="form-group">
            <label for="fieldPassword2" class="col-sm-2 control-label">确认密码</label>
            <div class="col-sm-4">
                <input type="password" class="form-control" required id="fieldPassword2" name="password2">
            </div>
            <br>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-2">
                <button type="submit" class="btn btn-default" id=''>提交</button>
            </div>
        </div>
    </form>
</div>