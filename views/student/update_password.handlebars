{{> student_nav}}
<div class="col-sm-9">
    <h3>&nbsp;&nbsp;修改密码</h3><br>
    <div class="formContainer">
        <form class="form-horizontal newsletterForm" role="form" action="/student/{{account.id}}/update_password" method="POST">
            <div class="form-group">
                <label for="fieldOldpassword" class="col-sm-2 control-label">原密码</label>
                <div class="col-sm-6">
                    <input type="password" class="form-control" required  name="oldpassword" autofocus="autofocus">
                </div>
            </div>
            <div class="form-group">
                <label for="fieldPassword1" class="col-sm-2 control-label">新密码</label>
                <div class="col-sm-6">
                    <input type="password" class="form-control" required name="password1">
                </div>
            </div>
            <div class="form-group">
                <label for="fieldPassword2" class="col-sm-2 control-label">新密码确认</label>
                <div class="col-sm-6">
                    <input type="password" class="form-control" required name="password2">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-4">
                    <button type="submit"  class="btn btn-default" >提交</button>
                </div>
            </div>
        </form>
    </div>
</div>

{{#section 'jquery'}}
    <script>
        $('document').ready(function(){
            $('#header_nav li').eq(4).addClass('active');
            $('#student_nav li').eq(4).addClass('active');
        });
    </script>
{{/section}}