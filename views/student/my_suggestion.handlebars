{{>student_nav}}

<div class="col-sm-9">
<div class="row">
	<div class="col-sm-5">
		<h3 style="color:red">请多给管理员提宝贵意见！</h3>
	</div>
</div>
{{#if suggestions}}
	<div class="row">
		<div class="col-sm-9">
	                <button class="btn btn-info" onclick="window.location='/student/{{account.id}}/write_suggestion'">提出建议</button>
	            </div>
	</div>
	<div class="row">
		<div class="col-sm-12 text-center">
	                <h3>我的建议<span>({{suggestionLength}})</span></h3>
	            </div>
	</div>
	<div class='row'>
		<div class='col-sm-12'>
			<table class="table table-striped table-bordered">
			<thead>
				<th>建议标题</th>
				<th>建议内容</th>
				<th>管理员反馈</th>
			</thead>
			<tbody>
				{{#each suggestions}}
					  <td>{{title}}</td>
					  <td>{{content}}</td>
					  <td>{{reply}}</td>
				{{/each}}
			</tbody>
			</table>
		</div>
	</div>
	
	
{{else}}
<div class='row'>
	<div class="col-sm-5 text-right">
		<h4>你还没有提过建议！</h4>
	</div>
	<div class="col-sm-1">
                <button class="btn btn-info" onclick="window.location='/student/{{account.id}}/write_suggestion'">提出建议</button>
            </div>
</div>
{{/if}}
</div>

{{#section 'jquery'}}
	<script>
		$('document').ready(function(){
			$('#header_nav li').eq(4).addClass('active');
			$('#student_nav li').eq(5).addClass('active');
		});
	</script>
{{/section}}